<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="wrap_content"
    tools:context=".RouteDataAdapter">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="20dp"
        app:cardElevation="20dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="#d1d1d1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:textSize="15dp"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:text="no"
                android:id="@+id/routenumber"
                android:textAlignment="center"
                android:gravity="center_horizontal"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:gravity="center"
                android:id="@+id/stationdetails"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/routenumber"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:text="Name"
                    android:layout_marginRight="10dp"
                    android:textColor="#000"
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_marginRight="10dp"
                    android:text="/"
                    android:id="@+id/slash"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="20sp"
                    android:textAlignment="center"
                    android:text="code"
                    android:id="@+id/code"
                    android:layout_width="wrap_content"
                    android:textColor="#000"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/stationdetails"
                android:layout_width="match_parent"
                android:id="@+id/arrdep"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20sp"
                    android:textColor="#000"
                    android:textAlignment="center"
                    android:text="scharr"
                    android:id="@+id/scharr"
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="20sp"
                    android:layout_marginLeft="30dp"
                    android:textAlignment="center"
                    android:text="schdep"
                    android:id="@+id/schdep"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_below="@id/arrdep"
                android:id="@+id/daydetails"
                android:layout_centerHorizontal="true"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <TextView
                    android:textAlignment="center"
                    android:textSize="18sp"
                    android:text="Day"
                    android:layout_marginRight="10dp"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="18sp"
                    android:text="0"
                    android:id="@+id/day"
                    android:textAlignment="center"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>